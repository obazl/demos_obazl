load(
    "@rules_ocaml//build:rules.bzl",
    "ocaml_module",
    "ocaml_test",
)

test_suite(
    name = "test",
    tests = ["alcotest", "hellotest"],
)

ocaml_test(
    name = "alcotest",
    main = ":Test_alcotest",
    timeout = "short"
)


ocaml_module(
    name   = "Test_alcotest",
    struct = "test_alcotest.ml",
    deps   = ["@opam.alcotest//lib/alcotest"]
)

###########
ocaml_test(
    name = "hellotest",
    main = "Test_hello",
    prologue = [
        "@opam.alcotest//lib/alcotest",
    ],
    timeout = "short"
)

ocaml_module(
    name   = "Test_hello",
    struct = "test_hello.ml",
    deps = [
        "@opam.alcotest//lib/alcotest",
        ":Hello",
    ],
)

ocaml_module(
    name   = "Hello",
    struct = "hello.ml",
)
