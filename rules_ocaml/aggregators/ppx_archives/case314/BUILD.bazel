load(
    "@rules_ocaml//build:rules.bzl",
    "ocaml_archive",
    "ocaml_module",
    "ocaml_test",
    "ppx_module",
    "ppx_executable",
)

ocaml_test(
    name = "test",
    main = "Test"
)

ppx_module(
    name = "Test",
    struct = "test.ml",
    ppx  = ":ppx.exe",
    deps = ["@ounit2//:ounit2"]
)

###############
ppx_executable(
    name = "ppx.exe",
    main = ":Runner",
    manifest = [
        ":Ppx_color",
        ":Ppx_greek",
        "@ppxlib//:ppxlib"
    ],
)

