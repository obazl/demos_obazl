ocaml_ns_library(
    name = "color",
    submodules = {
        ":Red": "Red",
        ":Green": "Green",
        ":Blue": "Blue",
    },
)

ocaml_module(
    name = "Red",
    sig = ":Red_cmi",
    struct = "red.ml",
    deps = [":Green"],
)

ocaml_signature(
    name = "Red_cmi",
    src = "red.mli",
)

ocaml_module(
    name = "Green",
    struct = "green.ml",
)

ocaml_module(
    name = "Blue",
    struct = "blue.ml",
)
