load(
    "@rules_ocaml//build:rules.bzl",
    "ocaml_library",
    "ocaml_module",
    "ocaml_ns",
    "ocaml_test"
)

ocaml_test(
    name = "test",
    main = "Test",
    timeout = "short",
)

ocaml_module(
    name   = "Test",
    struct = "test.ml",
    deps = [
        "@opam.ounit2//lib",
        ":libHello"
    ]
)

SUBMODULES = [
    ":Australian",
    ":English",
    ":French",
    ":Spanish"
]

##############
ocaml_library(
    name       = "libHello",
    manifest   = SUBMODULES
)

##################
ocaml_ns(
    name       = "nsHello",
    ns         = "hello",
    submodules = SUBMODULES
)

ocaml_module(
    name   = "Australian",
    ns     = ":nsHello",
    struct = "australian.ml",
)

ocaml_module(
    name   = "English",
    ns     = ":nsHello",
    struct = "english.ml",
)

ocaml_module(
    name   = "French",
    ns     = ":nsHello",
    struct = "french.ml",
)

ocaml_module(
    name   = "Spanish",
    ns     = ":nsHello",
    struct = "spanish.ml",
)
