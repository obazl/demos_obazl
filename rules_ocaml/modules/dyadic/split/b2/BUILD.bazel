# depend on compiled sigfile
ocaml_module(
    name   = "Hello",
    sig    = ":Hello_cmi",
    struct = "//modules/dyadic/split/b1/struct:hello.ml",
)

ocaml_signature(
    name = "Hello_cmi",
    src  = "hello.mli",
)
